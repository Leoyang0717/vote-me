<%if candidate.errors.any?%>
    <% candidate.errors.full_messages.each do |message| %>
        <h3 class="wrong_message">
            <%= message %>
        </h3>
        <%end%>
            <%end%>

                <%= form_for(candidate) do |form| %>
                    <div>
                        <%= form.label :name %>
                            <%= form.text_field :name %>
                    </div>
                    <div>
                        <%= form.label :party %>
                            <%= form.text_field :party %>
                    </div>
                    <div>
                        <%= form.label :age %>
                            <%= form.text_field :age %>
                    </div>
                    <div>
                        <%= form.label :politics %>
                            <%= form.text_area :politics %>
                    </div>
                    <%= form.submit %>
                        <% end %>