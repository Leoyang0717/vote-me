    <h1>votes</h1>

    <%= link_to 'Add Canidate' ,new_candidate_path %>

        <table>
            <tr>
                <td></td>
                <td>vote</td>
                <td>name</td>
                <td>party</td>
                <td>age</td>
                <td>action</td>
            </tr>

            <% @candidates.each do |candidate| %>
                <tr>
                    <td>
                        <%= link_to 'vote',vote_candidate_path(candidate.id) ,method:'post' %></td>
                    <td>
                        <%= candidate.vote_logs.size %>
                    </td>
                    <td>
                        <%= link_to candidate.name,candidate_path(candidate.id) %>
                    </td>

                    <td>
                        <%= candidate.party %>
                    </td>

                    <td>
                        <%= candidate.age %>
                    </td>
                    <td>
                        <%= link_to 'update',edit_candidate_path(candidate.id) %>
                    </td>
                    <td>    
                        <%= link_to 'delete',candidate_path(candidate.id) ,method: 'delete' , data: {confirm: 'are you sure?'}%>
                    </td>

                </tr>
                <% end %>
        </table>